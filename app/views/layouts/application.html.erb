<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for(:title) || "Teamup Neo Backend" %></title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="mobile-web-app-capable" content="yes">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= yield :head %>

    <link rel="manifest" href="/manifest.json">
    <link rel="icon" href="/icon.png" type="image/png">
    <link rel="icon" href="/icon.svg" type="image/svg+xml">
    <link rel="apple-touch-icon" href="/icon.png">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <%# <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %> 
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
      <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.4/css/all.css">

    <script src="https://code.highcharts.com/highcharts.js"></script>
    <script src="https://code.highcharts.com/modules/exporting.js"></script> <!-- Optional for exporting feature -->    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.4/css/all.css">

      <%# Include project_hub.css only for the project_hub pages %>
    <% if controller_name == 'project_hub' %>
      <%= stylesheet_link_tag 'project_hub', media: 'all', 'data-turbolinks-track': 'reload' %>
    <% end %>

    <script src="https://code.highcharts.com/highcharts.js"></script>
    <script src="https://code.highcharts.com/modules/exporting.js"></script> <!-- Optional for exporting feature -->
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <% if @user %>
      <div><%= render 'layouts/navbar' %></div>
    <% end %>

    <% if @show_sidebar %>
      <div class="d-flex flex-row">
        <%= render 'layouts/sidebar' %>
        <div style="margin-left: 280px; margin-top:70px;" class="container-fluid">
          <%= render partial: 'shared/display_flash' if not flash.empty? %>
          <%= yield %>
        </div>
      </div>
    <% else %>
      <%= render partial: 'shared/display_flash' if not flash.empty? %>
      <%= yield %>
    <% end %>
  </body>
</html>
