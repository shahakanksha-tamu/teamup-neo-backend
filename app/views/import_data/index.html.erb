<div style="margin-top: 90px;" class="container-fluid p-4">
    
    <div style="margin:auto;" class="card w-50">
        <div class="card-body">
            <div class="row">
                <div class="col-12 col-md-9">
                    <h3 class="card-title">Import Data</h3>
               
                </div>
                <div class="d-flex col-12 col-md-3 float-right justify-content-end">
                    <%= form_with url: :import_delete, method: :delete, local: true do |form| %>
                        <%= form.submit "Delete All Data", class: "btn btn-danger delete-button" %>
                    <% end %>   
                </div>
            </div>

        
            <p class="mt-5 card-text">Upload a CSV or Excel file to import students and mentors data</p>

            <%= form_with url: :import_upload, method: :post, local: true, html: { multipart: true } do |form| %>

                <div class="mt-4 form-group mb-3">
                    <%= form.file_field :fileUpload, id: "fileUpload", accept: ".csv, .xlsx", required: true, class: "form-control" %>
                    <small class="form-text text-muted">Accepted file types: .csv, .xlsx</small>

                </div>

                <div>
                    <%= form.submit "Upload and Import", class: "btn btn-primary upload-btn mt-3 mb-3" %>
                </div>

            <% end %>

        </div>
    </div>

</div>