<div class="container-fluid p-4">
  <div class="row">
    <div>
      <h4 class="team-info-heading">Team Members</h4>
      <div>
        <div class="row">
          <% if @team_members.present? %>
            <% @team_members.each do |user| %>
              <div class="col-md-6">
                <div class="card rounded mb-3 card-hover" style="max-width: 540px;">
                  <div class="row g-0">
                    <div class="col-12 col-md-4 d-flex justify-content-left align-items-center">
                      <img src="<%= user.photo.present? ? "#{user.photo}?sz=200" : asset_path("user icon.png") %>" alt="App Icon" width="150" height="150", class='img-fluid'>
                    </div>
                    <div class="col-12 col-md-8">
                      <div class="card-body">
                        <h6 style="margin-bottom: 0px;" class="card-title"><%=user.first_name%> <%=user.last_name%></h6>
                        <p style="margin-bottom: 10px;"class="card-text"><small class="text-muted">Student</small></p>

                        <p class="card-text"><i class="material-icons icon email-icon">mail</i><a href="mailto:<%=user.email%>"><%=user.email%></a><br><i class="material-icons icon">call</i>+1 <%=user.contact%></p>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            <% end %>
          <% else %>
            <p>You have a pending team assigment. Please check again later.</p>
          <% end %>
        </div>
      </div> 
    </div>
  </div>
    
  <div class="row">
    <div>
      <h4 class="team-info-heading mt-3">Key Contacts</h4>
      <div>
        <div class="row">
          <% if @mentors.present? %>
            <% @mentors.each do |mentor| %>
              <div class="col-md-6">
                <div class="card rounded mb-3 card-hover" style="max-width: 540px;">
                  <div class="row g-0">
                    <div class="col-12 col-md-4 d-flex justify-content-left align-items-center">
                      <img src="<%= mentor.photo.present? ? "#{mentor.photo}?sz=200" : asset_path("user icon.png") %>" alt="App Icon" width="150" height="150", class='img-fluid'>
                    </div>
                    <div class="col-12 col-md-8">
                      <div class="card-body">
                        <h6 style="margin-bottom: 0px;" class="card-title"><%=mentor.first_name%> <%=mentor.last_name%></h6>
                        <p style="margin-bottom: 10px;"class="card-text"><small class="text-muted">Admin</small></p>

                        <p style="margin-bottom: 7px;"class="card-text"><i class="material-icons icon email-icon">mail</i><a href="mailto:<%=mentor.email%>"><%=mentor.email%></a><br><i class="material-icons icon">call</i>+1 <%=mentor.contact%></p>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            <% end %>
          <% else %>
            <p>You have a pending mentor assignment. Please check again later.</p>
          <% end %>
        </div>
      </div> 
    </div>
  </div>
</div>
