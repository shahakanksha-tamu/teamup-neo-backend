<!-- app/views/project_hub/timeline.html.erb -->
<div class="timeline-container">
  <h2>Project Timeline</h2>

  <!-- Gantt Chart Section -->
  <div class="gantt-chart-container">
    <h3>Gantt Chart</h3>
    <div class="chart-scroll">
      <table class="gantt-table">
        <thead>
          <tr>
            <th>Milestone</th>
            <% (0..52).each do |week| %>
              <th>Week <%= week + 1 %></th>
            <% end %>
          </tr>
        </thead>
        <tbody>
          <% @milestones.each do |milestone| %>
            <% start_week = ((milestone.created_at.to_date.cweek - 1) % 52) %> <!-- Calculate start week -->
            <% end_week = ((milestone.deadline.to_date.cweek - 1) % 52) %> <!-- Calculate end week -->
            <tr>
              <td><%= milestone.title %></td>
              <% (0..52).each do |week| %>
                <% if week >= start_week && week <= end_week %>
                  <td class="gantt-bar" title="<%= milestone.title %>"></td>
                <% else %>
                  <td></td>
                <% end %>
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <!-- Milestone Table Section -->
  <div class="milestone-table-container">
    <h3>Milestone Details</h3>
    <table>
      <thead>
        <tr>
          <th>Name</th>
          <th>Status</th>
          <th>Start Date</th>
          <th>End Date</th>
          <th>Objective</th>
        </tr>
      </thead>
      <tbody>
        <% @milestones.each do |milestone| %>
          <tr>
            <td><%= milestone.title %></td>
            <td><%= milestone.status %></td>
            <td><%= milestone.created_at %></td>
            <td><%= milestone.deadline %></td>
            <td><%= milestone.objective %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<style>
  .gantt-table {
    width: 100%;
    border-collapse: collapse;
  }
  .gantt-table th, .gantt-table td {
    border: 1px solid #ddd;
    padding: 5px;
    text-align: center;
  }
  .gantt-table th {
    background-color: #f4f4f4;
    font-weight: bold;
  }
  .gantt-bar {
    background-color: #76c7c0;
  }
</style>
