<!-- app/views/project_hub/timeline.html.erb -->
<div class="timeline-container">
  <h2>Project Timeline</h2>

  <!-- Gantt Chart Section -->
  <div class="gantt-chart-container">
    <h3>Gantt Chart</h3>
    <div class="chart-scroll">
      <canvas id="ganttChart" width="1200" height="400"></canvas>
    </div>
  </div>

  <!-- Milestone Table Section -->
  <div class="milestone-table-container">
    <h3>Milestone Details</h3>
    <table>
      <thead>
        <tr>
          <th>Name</th>
          <th>Status</th>
          <th>Start Date</th>
          <th>End Date</th>
          <th>Objective</th>
        </tr>
      </thead>
      <tbody>
        <% @milestones.each do |milestone| %>
          <tr>
            <td><%= milestone.title %></td>
            <td><%= milestone.status %></td>
            <td><%= milestone.created_at %></td>
            <td><%= milestone.deadline %></td>
            <td><%= milestone.objective %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
  const ctx = document.getElementById('ganttChart').getContext('2d');
  const ganttChart = new Chart(ctx, {
    type: 'bar',  // Use a bar chart for a basic Gantt chart
    data: {
      labels: ['Milestone 1', 'Milestone 2', 'Milestone 3'],  // Add milestone names
      datasets: [{
        label: 'Timeline',
        data: [5, 10, 7],  // Add durations for each milestone
        backgroundColor: 'rgba(75, 192, 192, 0.2)',
        borderColor: 'rgba(75, 192, 192, 1)',
        borderWidth: 1
      }]
    },
    options: {
      scales: {
        x: { title: { display: true, text: 'Milestones' } },
        y: { title: { display: true, text: 'Duration (days)' } }
      }
    }
  });
</script>
