<div class="container-lg">
  <div class="d-flex justify-content-between">
    <h1 class="mt-5">Project Management Hub</h1>
    <a href="/projects/new" style="height:40px" class="btn btn-warning mt-5">+ Create New Project</a>
  </div>
  <% if @projects.any? %>
  <div class="d-flex flex-wrap mt-5" style="gap: 20px;">
    <% @projects.each do |project| %>
      <div class="card mb-3 flex-item" style="min-width:450px">
        <div class="card-header pt-3">
            <h5><%= project.name %></h5>
        </div>
        <div class="card-body">
              <div class="row">
                <div class="col-sm-3 text-secondary">
                  Description
                </div>
                <div class="col-sm-8">
                  <%= project.description %>
                </div>
              </div>
              <div class="row">
                <div class="col-sm-3 text-secondary">
                  Status
                </div>
                <div class="col-sm-8">
                  <span class="<%= project.status == 'active' ? 'text-success' : 'text-warning' %>">
                  <%= project.status %> </span>
                </div>
              </div>
              <div class="row">
                <div class="col-sm-3 text-secondary">
                  Objectives
                </div>
                <div class="col-sm-8">
                  <%= project.objectives %>
                </div>
              </div>
        </div>
        <div class="d-flex flex-row-reverse p-4">
          <a href="/projects/<%= project.id %>" class="btn btn-warning">View Project</a>
        </div>
      </div>
    <% end %>
  </div>
  <% else %>
    <h3 class="mt-5">Get Stated. Create a New Project.</h3>
  <% end %>
</div>


